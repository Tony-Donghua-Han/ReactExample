{
    "compilerOptions": {
        "outDir": "./dist/",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        // Support import format of import <name> from <module>
        "esModuleInterop": true,
        "module": "es2015",
        "jsx": "react"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "built", "coverage"]
}
